---
import Meta from '@/components/Meta.astro'

import deadboi from '@/assets/futura/deadboi.svg'
import arrowLeft from '@/assets/futura/arrow-left.svg'
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<Meta title="Future Spheres | demo landing page" description="idk cool shiny purple design" />
	</head>
	<body class="flex h-screen w-full flex-col items-center justify-center py-12 font-fh">
		<main class="my-auto flex flex-col items-center gap-8">
			<div class="flex flex-col items-center gap-2">
				<img src={deadboi.src} alt="not found page funy picture" width="425" />
				<h1
					class="bg-gradient-to-r from-fp-500 to-[200%] bg-clip-text text-2xl font-medium text-transparent"
				>
					Oops! Nothing to see here
				</h1>
			</div>

			<button
				class="group flex w-80 flex-row items-center justify-center gap-2 rounded-full bg-fp-500 p-2.5 text-white"
			>
				<img
					class="group-hover:-translate-x-1"
					src={arrowLeft.src}
					alt="arrow left icon"
					width="20"
				/>
				Back to Home
			</button>
		</main>

		<p class="mt-auto text-slate-500">Â© 2023 futuresphere Copyrights Reserved</p>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Manrope&display=swap"
			rel="stylesheet"
		/>
	</body>
</html>
